<UserControl x:Class="AutoConnect.Client.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
            <TextBlock Text="⚙️ Settings" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <Border Background="{StaticResource InfoBrush}" CornerRadius="8" 
                    Padding="8,4" Margin="15,5,0,0" VerticalAlignment="Top">
                <TextBlock Text="CONFIG" FontSize="11" FontWeight="Bold" Foreground="White"/>
            </Border>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- VPN Settings -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🌐 VPN Configuration" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Server Location:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="🇨🇦 Canada (Montreal)"/>
                                    <ComboBoxItem Content="🇺🇸 United States (East)"/>
                                    <ComboBoxItem Content="🇺🇸 United States (West)"/>
                                    <ComboBoxItem Content="🇬🇧 United Kingdom"/>
                                    <ComboBoxItem Content="🇩🇪 Germany"/>
                                </ComboBox>

                                <TextBlock Text="Connection Protocol:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="OpenVPN UDP (Recommended)"/>
                                    <ComboBoxItem Content="OpenVPN TCP"/>
                                    <ComboBoxItem Content="WireGuard"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Auto-Connect:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <CheckBox Content="Connect automatically on startup" IsChecked="True" Margin="0,0,0,15"/>

                                <TextBlock Text="Reconnection:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <CheckBox Content="Auto-reconnect on connection loss" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Show connection notifications" IsChecked="False"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="🔧 Configure VPN" 
                                    Command="{Binding OpenVpnSetupCommand}"
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Margin="0,0,10,0"/>
                            <Button Content="🔄 Reset to Defaults" 
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Vehicle Settings -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🚗 Vehicle Configuration" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="OBD Port:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="Auto-detect"/>
                                    <ComboBoxItem Content="COM3"/>
                                    <ComboBoxItem Content="COM4"/>
                                    <ComboBoxItem Content="COM5"/>
                                </ComboBox>

                                <TextBlock Text="Baud Rate:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="38400 (Default)"/>
                                    <ComboBoxItem Content="9600"/>
                                    <ComboBoxItem Content="115200"/>
                                    <ComboBoxItem Content="57600"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Data Refresh Rate:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="1" Margin="0,0,0,15">
                                    <ComboBoxItem Content="1 second (High CPU)"/>
                                    <ComboBoxItem Content="2 seconds (Recommended)"/>
                                    <ComboBoxItem Content="5 seconds"/>
                                    <ComboBoxItem Content="10 seconds"/>
                                </ComboBox>

                                <TextBlock Text="Options:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <CheckBox Content="Enable simulation mode for demo" IsChecked="False" Margin="0,0,0,8"/>
                                <CheckBox Content="Log all OBD communications" IsChecked="False"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="🔍 Test Connection" 
                                    Command="{Binding RefreshDataCommand}"
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Margin="0,0,10,0"/>
                            <Button Content="🔄 Rescan Ports" 
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Application Settings -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📱 Application Settings" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Appearance:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="🌙 Dark Theme"/>
                                    <ComboBoxItem Content="☀️ Light Theme"/>
                                    <ComboBoxItem Content="🔄 System Default"/>
                                </ComboBox>

                                <TextBlock Text="Language:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="0" Margin="0,0,0,15">
                                    <ComboBoxItem Content="🇺🇸 English"/>
                                    <ComboBoxItem Content="🇫🇷 Français"/>
                                    <ComboBoxItem Content="🇩🇪 Deutsch"/>
                                    <ComboBoxItem Content="🇪🇸 Español"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Startup Options:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <CheckBox Content="Start with Windows" IsChecked="False" Margin="0,0,0,8"/>
                                <CheckBox Content="Start minimized to tray" IsChecked="False" Margin="0,0,0,8"/>
                                <CheckBox Content="Check for updates automatically" IsChecked="True" Margin="0,0,0,15"/>

                                <TextBlock Text="Logging Level:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="1">
                                    <ComboBoxItem Content="Minimal"/>
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Verbose"/>
                                    <ComboBoxItem Content="Debug"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Data & Privacy -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🔒 Data &amp; Privacy" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Data Retention:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="1" Margin="0,0,0,15">
                                    <ComboBoxItem Content="1 day"/>
                                    <ComboBoxItem Content="7 days"/>
                                    <ComboBoxItem Content="30 days"/>
                                    <ComboBoxItem Content="Forever"/>
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                    <Button Content="🗑️ Clear All Data" 
                                            Style="{StaticResource DangerButtonStyle}" 
                                            Margin="0,0,10,0"/>
                                    <Button Content="📤 Export Data" 
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Privacy Options:" 
                                           Foreground="{StaticResource SecondaryTextBrush}" 
                                           FontSize="14" Margin="0,0,0,8"/>
                                <CheckBox Content="Send anonymous usage statistics" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Share crash reports" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="Enable location services" IsChecked="False" Margin="0,0,0,15"/>

                                <Button Content="📋 View Privacy Policy" 
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ℹ️ About AutoConnect" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="Version 1.0.0 - Professional Vehicle Diagnostic Platform" 
                                       Foreground="{StaticResource SecondaryTextBrush}" FontSize="14" Margin="0,0,0,5"/>
                            <TextBlock Text="Built with .NET 8 and Modern WPF" 
                                       Foreground="{StaticResource TertiaryTextBrush}" FontSize="12"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Button Content="🔄 Check for Updates" 
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Margin="0,0,0,8"/>
                            <Button Content="📞 Support" 
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>