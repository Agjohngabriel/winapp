<UserControl x:Class="AutoConnect.Client.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
            <TextBlock Text="📊 Performance" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <Border Background="{StaticResource InfoBrush}" CornerRadius="8" 
                    Padding="8,4" Margin="15,5,0,0" VerticalAlignment="Top">
                <TextBlock Text="METRICS" FontSize="11" FontWeight="Bold" Foreground="White"/>
            </Border>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Performance Summary Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- VPN Performance -->
                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="10" Padding="20" Margin="0,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="🌐" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="VPN Latency" Foreground="{StaticResource SecondaryTextBrush}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PingLatency, FallbackValue=0}" 
                                       Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="24"/>
                            <TextBlock Text="ms" Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="16" Margin="2,4,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Average: 45ms" Foreground="{StaticResource TertiaryTextBrush}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Data Transfer -->
                <Border Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="10" Padding="20" Margin="4,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="📡" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Data Usage" Foreground="{StaticResource SecondaryTextBrush}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                        <TextBlock Text="{Binding DataUsage, FallbackValue=0.0 KB}" 
                                   Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="20" Margin="0,0,0,4"/>
                        <TextBlock Text="Session total" Foreground="{StaticResource TertiaryTextBrush}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Update Rate -->
                <Border Grid.Column="2" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="10" Padding="20" Margin="4,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Update Rate" Foreground="{StaticResource SecondaryTextBrush}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="2.0" 
                                       Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="24"/>
                            <TextBlock Text="Hz" Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="16" Margin="2,4,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Real-time" Foreground="{StaticResource TertiaryTextBrush}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Uptime -->
                <Border Grid.Column="3" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="10" Padding="20" Margin="8,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⏱️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Session Time" Foreground="{StaticResource SecondaryTextBrush}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SessionDuration, FallbackValue=00:00:00}" 
                                   Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" FontSize="20" Margin="0,0,0,4"/>
                        <TextBlock Text="Active connection" Foreground="{StaticResource TertiaryTextBrush}" FontSize="11"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts and Graphs -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Main Chart Area -->
                <Border Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="12" Padding="25" Margin="0,0,15,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="📈 Real-time Performance Chart" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <ComboBox SelectedIndex="0" Margin="20,0,0,0" MinWidth="150">
                                <ComboBoxItem Content="Latency (ms)"/>
                                <ComboBoxItem Content="Battery Voltage"/>
                                <ComboBoxItem Content="Engine RPM"/>
                                <ComboBoxItem Content="Data Transfer Rate"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Placeholder for chart -->
                        <Border Background="{StaticResource TertiaryBackgroundBrush}" 
                                CornerRadius="8" Height="300" Padding="20">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Performance Chart" 
                                           FontSize="20" FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Real-time data visualization will appear here" 
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center" FontSize="14"/>
                                <TextBlock Text="Chart library integration required" 
                                           Foreground="{StaticResource TertiaryTextBrush}"
                                           HorizontalAlignment="Center" FontSize="12" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Chart Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                            <Button Content="⏸️ Pause" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0"/>
                            <Button Content="🔄 Reset" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0"/>
                            <Button Content="💾 Export" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Performance Statistics -->
                <StackPanel Grid.Column="1">
                    <!-- Connection Quality -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🔗 Connection Quality" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="VPN Stability" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="98.5%" 
                                               Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Vehicle Response" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="100%" 
                                               Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Error Rate" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="0.1%" 
                                               Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- System Resources -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="⚡ System Resources" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="CPU Usage" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="12%" 
                                               Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Memory" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="245 MB" 
                                               Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Network I/O" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="2.3 KB/s" 
                                               Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Actions -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="🔧 Actions" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                            <Button Content="🔍 Run Diagnostics" 
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Margin="0,0,0,8"/>
                            <Button Content="📊 Benchmark Test" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="0,0,0,8"/>
                            <Button Content="⚙️ Optimize Settings" 
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>