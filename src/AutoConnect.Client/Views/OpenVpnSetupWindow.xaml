<!-- src/AutoConnect.Client/Views/OpenVpnSetupWindow.xaml -->
<Window x:Class="AutoConnect.Client.Views.OpenVpnSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="OpenVPN Configuration Setup"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="OpenVPN Setup" 
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <TextBlock Text="Configure your OpenVPN connection for AutoConnect"
                       FontSize="14" Margin="0,5,0,0"
                       Foreground="{StaticResource SecondaryTextBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent">

            <!-- Import Existing Config -->
            <TabItem Header="Import Config File">
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="8" Padding="25">
                    <StackPanel>
                        <TextBlock Text="Import Existing .ovpn File" 
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="If you already have an OpenVPN configuration file (.ovpn), you can import it directly."
                                   TextWrapping="Wrap" Margin="0,0,0,20"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ConfigFilePathTextBox" 
                                     Grid.Column="0"
                                     IsReadOnly="True"
                                     Margin="0,0,10,0"
                                     Text="Select your .ovpn configuration file..."/>

                            <Button Grid.Column="1" 
                                    Content="Browse..."
                                    Click="BrowseConfigFile_Click"
                                    Padding="15,8"/>
                        </Grid>

                        <Border x:Name="ValidationPanel" 
                                Background="{StaticResource TertiaryBackgroundBrush}"
                                CornerRadius="6" Padding="15" 
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Configuration Validation" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="ValidationResultsTextBlock"
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="ImportConfigButton"
                                Content="Import Configuration"
                                HorizontalAlignment="Left"
                                Margin="0,20,0,0"
                                Padding="20,10"
                                Background="{StaticResource PrimaryAccentBrush}"
                                Foreground="White"
                                Click="ImportConfig_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Manual Configuration -->
            <TabItem Header="Manual Setup">
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="8" Padding="25">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Manual Configuration" 
                                       FontSize="18" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}" 
                                       Margin="0,0,0,15"/>

                            <!-- Server Settings -->
                            <GroupBox Header="Server Settings" Margin="0,0,0,20">
                                <StackPanel Margin="0,10,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Server Address" 
                                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                                       Margin="0,0,0,5"/>
                                            <TextBox x:Name="ServerAddressTextBox"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Port" 
                                                       Foreground="{StaticResource SecondaryTextBrush}" 
                                                       Margin="0,0,0,5"/>
                                            <TextBox x:Name="ServerPortTextBox" 
                                                     Text="1194"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <TextBlock Text="Protocol: " 
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                                   Margin="0,0,10,0"/>
                                        <ComboBox x:Name="ProtocolComboBox" 
                                                  SelectedIndex="0" Width="100">
                                            <ComboBoxItem Content="UDP"/>
                                            <ComboBoxItem Content="TCP"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Authentication -->
                            <GroupBox Header="Authentication" Margin="0,0,0,20">
                                <StackPanel Margin="0,10,0,0">
                                    <RadioButton x:Name="CertificateAuthRadio" 
                                                 Content="Certificate Authentication" 
                                                 IsChecked="True" 
                                                 Margin="0,0,0,10"/>

                                    <RadioButton x:Name="UsernamePasswordAuthRadio" 
                                                 Content="Username/Password Authentication"
                                                 Margin="0,0,0,15"/>

                                    <StackPanel x:Name="CertificatePanel">
                                        <TextBlock Text="Certificate Files" 
                                                   FontWeight="Medium" 
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   Margin="0,0,0,10"/>

                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="CaCertPathTextBox" 
                                                     IsReadOnly="True" Margin="0,0,10,0"/>
                                            <Button Grid.Column="1" Content="Browse" 
                                                    Click="BrowseCaCert_Click" Padding="10,5"/>
                                        </Grid>

                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="ClientCertPathTextBox" 
                                                     IsReadOnly="True" Margin="0,0,10,0"/>
                                            <Button Grid.Column="1" Content="Browse" 
                                                    Click="BrowseClientCert_Click" Padding="10,5"/>
                                        </Grid>

                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="ClientKeyPathTextBox" 
                                                     IsReadOnly="True" Margin="0,0,10,0"/>
                                            <Button Grid.Column="1" Content="Browse" 
                                                    Click="BrowseClientKey_Click" Padding="10,5"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Advanced Options -->
                            <GroupBox Header="Advanced Options" Margin="0,0,0,20">
                                <StackPanel Margin="0,10,0,0">
                                    <CheckBox x:Name="RedirectGatewayCheckBox" 
                                              Content="Route all traffic through VPN" 
                                              IsChecked="True" 
                                              Margin="0,5"/>
                                    <CheckBox x:Name="CompressionCheckBox" 
                                              Content="Enable compression (LZO)" 
                                              IsChecked="True" 
                                              Margin="0,5"/>
                                </StackPanel>
                            </GroupBox>

                            <Button x:Name="CreateConfigButton"
                                    Content="Create Configuration"
                                    HorizontalAlignment="Left"
                                    Padding="20,10"
                                    Background="{StaticResource PrimaryAccentBrush}"
                                    Foreground="White"
                                    Click="CreateConfig_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Test Connection -->
            <TabItem Header="Test Connection">
                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="8" Padding="25">
                    <StackPanel>
                        <TextBlock Text="Test OpenVPN Connection" 
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Test your OpenVPN configuration to ensure it works correctly."
                                   TextWrapping="Wrap" Margin="0,0,0,20"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>

                        <Button x:Name="TestConnectionButton"
                                Content="Start Connection Test"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"
                                Padding="20,10"
                                Background="{StaticResource InfoBrush}"
                                Foreground="White"
                                Click="TestConnection_Click"/>

                        <Border x:Name="TestResultsPanel"
                                Background="{StaticResource TertiaryBackgroundBrush}"
                                CornerRadius="6" Padding="15"
                                Visibility="Collapsed">
                            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="TestResultsTextBlock"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Margin="0,0,10,0" 
                    Padding="15,8"/>
            <Button x:Name="SaveButton"
                    Content="Save &amp; Close"
                    Background="{StaticResource SuccessBrush}"
                    Foreground="White"
                    Padding="15,8"
                    Click="Save_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>